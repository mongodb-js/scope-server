{
  "name": "mongodb-scope-server",
  "description": "Uses the nodejs native driver to provide an http api to mongodb",
  "version": "0.12.0",
  "scripts": {
    "fmt": "mongodb-js-fmt test/*.js lib/{*.js,**/*.js} bin/*.js test/*.js",
    "ci": "mj-ci --verbose",
    "test": "mocha",
    "start": "NODE_ENV=development nodemon --exec 'node --harmony' --no-stdin --watch lib bin/mongodb-scope-server.js",
    "check": "mongodb-js-precommit"
  },
  "check": {
    "ignore": [
      "coverage/{*,**/*}"
    ]
  },
  "precommit": [
    "check"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/mongodb-js/scope-server.git"
  },
  "bin": {
    "mongodb-scope-server": "bin/mongodb-scope-server.js"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "async": "^1.5.0",
    "body-parser": "^1.14.1",
    "boom": "^3.0.0",
    "bugsnag": "^1.6.6",
    "chalk": "^1.1.1",
    "csv-write-stream": "^1.0.0",
    "debug": "^2.2.0",
    "event-source-emitter": "0.0.2",
    "event-stream": "^3.3.2",
    "express": "^4.13.3",
    "figures": "^1.4.0",
    "helmet": "^1.0.1",
    "joi": "^7.0.1",
    "jsonwebtoken": "^5.5.2",
    "lodash": "^3.10.1",
    "mongodb-collection-sample": "^0.3.1",
    "mongodb-connection-model": "^3.0.10",
    "mongodb-deployment-model": "^2.0.1",
    "mongodb-extended-json": "^1.5.7",
    "mongodb-favicon": "^0.0.1",
    "mongodb-instance-model": "^2.1.6",
    "mongodb-js-errors": "^0.1.0",
    "mongodb-ns": "^1.0.3",
    "mongodb-read-preference": "^1.0.4",
    "mongodb-replicaset": "^0.1.1",
    "mongodb-sharding": "^0.1.2",
    "mongoscope-config": "^0.1.0",
    "socket.io": "^1.3.7",
    "socket.io-stream": "0.9.0",
    "socketio-jwt": "^4.3.3",
    "uuid": "^2.0.1"
  },
  "devDependencies": {
    "cli-table": "^0.3.1",
    "eslint-config-mongodb-js": "^1.0.6",
    "is-mongodb-running": "^0.0.1",
    "mj": "^1.0.4",
    "mocha": "^2.3.4",
    "mongodb-connection-fixture": "^0.0.10",
    "mongodb-js-fmt": "^0.0.3",
    "mongodb-js-precommit": "^0.2.8",
    "mongodb-runner": "^3.1.15",
    "nodemon": "^1.8.1",
    "numeral": "^1.5.3",
    "pre-commit": "^1.1.2",
    "socket.io-client": "^1.3.7",
    "supertest": "^1.1.0"
  }
