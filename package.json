{
  "name": "scout-server",
  "description": "Uses the nodejs native driver to provide an http api to mongodb",
  "version": "0.2.4",
  "scripts": {
    "ci": "npm run coverage && npm run security-audit",
    "pretest": "mongodb-runner start",
    "test": "mocha",
    "posttest": "mongodb-runner stop",
    "start": "nodemon --no-stdin --watch lib bin/scout-server.js",
    "check": "mongodb-js-precommit",
    "security-audit": "nsp package",
    "precoverage": "npm run pretest",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha",
    "postcoverage": "npm run posttest"
  },
  "check": {
    "ignore": [
      "coverage/{*,**/*}"
    ]
  },
  "precommit": [
    "check"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/10gen/scout-server.git"
  },
  "bin": {
    "scout-server": "bin/scout-server.js"
  },
  "dependencies": {
    "async": "^1.4.2",
    "body-parser": "^1.14.0",
    "boom": "^2.9.0",
    "chalk": "^1.1.1",
    "csv-write-stream": "^1.0.0",
    "debug": "^2.2.0",
    "event-source-emitter": "0.0.2",
    "event-stream": "^3.3.1",
    "express": "^4.13.3",
    "figures": "^1.4.0",
    "joi": "^6.7.1",
    "jsonwebtoken": "^5.0.5",
    "lodash": "^3.10.1",
    "mongodb": "^2.0.43",
    "mongodb-collection-sample": "^0.1.2",
    "mongodb-connection-model": "^0.0.3",
    "mongodb-deployment-model": "^0.2.0",
    "mongodb-extended-json": "^1.5.1",
    "mongodb-favicon": "^0.0.1",
    "mongodb-instance-model": "^0.2.0",
    "mongodb-ns": "^1.0.0",
    "mongodb-url": "0.0.1",
    "mongoscope-config": "^0.1.0",
    "sift": "^2.0.8",
    "socket.io": "^1.3.7",
    "socket.io-stream": "0.8.0",
    "socketio-jwt": "^4.3.1",
    "uuid": "^2.0.1"
  },
  "devDependencies": {
    "eslint-config-mongodb-js": "^0.1.6",
    "istanbul": "^0.3.20",
    "mocha": "^2.3.3",
    "mocha-evergreen-reporter": "0.0.7",
    "mongodb-js-precommit": "^0.2.2",
    "mongodb-runner": "mongodb-js/runner",
    "mongodb-version-manager": "^0.7.1",
    "nodemon": "^1.7.0",
    "nsp": "^1.1.0",
    "pre-commit": "^1.1.1",
    "socket.io-client": "^1.3.7",
    "supertest": "^1.1.0"
  }
}
